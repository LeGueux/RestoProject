<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Resto">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>Bean.Utilisateur</class>
		<class>Bean.Role</class>
		<class>Bean.Plat</class>
		<class>Bean.Commentaire</class>
		
		<properties>
			<!-- PROPRIETES STANDARDS JPA -->
			<property 	name="javax.persistence.jdbc.driver" 
						value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
			<property 	name="javax.persistence.jdbc.url" 
						value="jdbc:sqlserver://localhost:1433;databasename=Resto"/>
			<property 	name="javax.persistence.jdbc.user" 
						value="sa"/>
			<property 	name="javax.persistence.jdbc.password" 
						value="Pa$$w0rd"/>
						
			<!-- PROPRIETES SPECIFIQUES A L'IMPLEMENTATION UTILISEE -->			
			<property 	name="hibernate.show_sql" 
						value="true"/>
			<property 	name="hibernate.format_sql" 
						value="true"/>
			<!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
		
		</properties>
	</persistence-unit>
</persistence>
